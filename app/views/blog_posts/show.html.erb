<p id="notice"><%= notice %></p>

<div class="panel panel-outline">
	<div class="panel-heading panel-custom">
		  <strong><%= @blog_post.user.username %></strong><br />
		  <%= @blog_post.created_at.strftime('%Y/%m/%d') %>
	</div>
	<div class="panel-body panel-trans">
		<h1><%= @blog_post.title %></h1><br />
		<p>
		  <%= @blog_post.blog_entry %>
		</p>
	</div>
</div>


    <div class="panel panel-outline">
      <div class="panel-body panel-trans">
		<%= render 'comments/form' %>
      </div>
    </div>


<div class="panel panel-outline">

		<div class="panel-heading panel-custom">
			<p>Comments</p>
		</div>
	<% @blog_post.comments.each do | comment | %>
		<div class="panel-body panel-trans">
			<p><%= comment.created_at.in_time_zone("Eastern Time (US & Canada)").strftime('%Y/%m/%d @ %l:%M:%S %p') %></p>
			<p>&nbsp;   <strong><%= comment.user.username %></strong> said: </p>
			<p>&nbsp;   <%= comment.comment_entry %></p>
		</div>
	<%end%>

</div>

<div>
	<%= link_to 'Back', blog_posts_path, class: "btn btn-custom"  %>
</div>






